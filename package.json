{
  "name": "simoraai-backend",
  "version": "1.0.0",
  "description": "Video caption generation",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "render-build": "npm install && npm run build"
  },
  "keywords": [
    "express",
    "assemblyai",
    "captions",
    "typescript"
  ],
  "author": "Priyanshu Joshi",
  "license": "ISC",
  "dependencies": {
    "assemblyai": "^4.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "nodemon": "^3.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
